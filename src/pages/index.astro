---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
---

<Layout title="AVANTGARDE • NETLIFY × ASTRO">
    <div class="avantgarde-container">
        <ContextAlert class="context-floating" />
        
        <section class="hero-section">
            <div class="title-stack">
                <h1 class="title-primary">NETLIFY</h1>
                <h1 class="title-secondary">×</h1>
                <h1 class="title-tertiary">ASTRO</h1>
            </div>
            
            <div class="manifesto">
                <div class="manifesto-text">
                    <span class="manifesto-line">BEYOND</span>
                    <span class="manifesto-line">STATIC</span>
                    <span class="manifesto-line">PAGES</span>
                </div>
                <div class="manifesto-description">
                    Streaming SSR • Edge Middleware • On-demand Revalidation
                </div>
            </div>
        </section>

        <section class="content-grid">
            <div class="feature-block block-1">
                <h2 class="feature-title">STREAMING</h2>
                <div class="feature-desc">Real-time server-side rendering with zero performance impact</div>
            </div>
            
            <div class="feature-block block-2">
                <h2 class="feature-title">EDGE</h2>
                <div class="feature-desc">Lightning-fast middleware at the network edge</div>
            </div>
            
            <div class="feature-block block-3">
                <h2 class="feature-title">REVALIDATION</h2>
                <div class="feature-desc">Intelligent cache invalidation for dynamic content</div>
            </div>
        </section>

        <section class="action-zone">
            <div class="cta-wrapper">
                <a href="https://docs.netlify.com/frameworks/astro/" class="cta-primary">
                    <span class="cta-text">EXPLORE</span>
                    <span class="cta-arrow">→</span>
                </a>
            </div>
        </section>
    </div>

    <style>
        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(3deg); }
            50% { transform: translateY(-10px) rotate(3deg); }
        }

        @keyframes slideInLeft {
            from { 
                transform: translateX(-100px) rotate(-2deg); 
                opacity: 0; 
            }
            to { 
                transform: translateX(0) rotate(-2deg); 
                opacity: 1; 
            }
        }

        @keyframes slideInRight {
            from { 
                transform: translateX(100px) rotate(2deg); 
                opacity: 0; 
            }
            to { 
                transform: translateX(0) rotate(2deg); 
                opacity: 1; 
            }
        }

        @keyframes fadeInUp {
            from { 
                transform: translateY(30px); 
                opacity: 0; 
            }
            to { 
                transform: translateY(0); 
                opacity: 1; 
            }
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.9; }
            50% { opacity: 1; }
        }

        .avantgarde-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.8s ease-out;
        }

        .avantgarde-container::before {
            content: '';
            position: absolute;
            top: 10%;
            left: -10%;
            width: 30%;
            height: 30%;
            background: radial-gradient(circle, rgba(246, 114, 128, 0.15) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
            z-index: -1;
        }

        .avantgarde-container::after {
            content: '';
            position: absolute;
            bottom: 20%;
            right: -5%;
            width: 25%;
            height: 25%;
            background: linear-gradient(45deg, rgba(53, 92, 125, 0.2) 0%, transparent 100%);
            transform: rotate(45deg);
            animation: pulse 4s ease-in-out infinite;
            z-index: -1;
        }

        .context-floating {
            position: absolute;
            top: 2rem;
            right: 2rem;
            z-index: 10;
            animation: float 4s ease-in-out infinite;
        }

        .hero-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 4rem 0;
            position: relative;
        }

        .title-stack {
            display: flex;
            flex-direction: column;
            gap: -0.5rem;
        }

        .title-primary {
            font-size: clamp(3rem, 15vw, 8rem);
            font-weight: 900;
            line-height: 0.8;
            letter-spacing: -0.05em;
            color: #f67280;
            font-family: 'Inter Variable', sans-serif;
            animation: slideInLeft 1s ease-out 0.2s both;
        }

        .title-secondary {
            font-size: clamp(2rem, 10vw, 5rem);
            font-weight: 300;
            color: white;
            text-align: center;
            margin: 1rem 0;
            opacity: 0.7;
            animation: pulse 2s ease-in-out infinite, fadeInUp 1s ease-out 0.6s both;
        }

        .title-tertiary {
            font-size: clamp(3rem, 15vw, 8rem);
            font-weight: 900;
            line-height: 0.8;
            letter-spacing: -0.05em;
            color: white;
            text-align: right;
            font-family: 'Inter Variable', sans-serif;
            animation: slideInRight 1s ease-out 0.4s both;
        }

        .manifesto {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 2rem;
            animation: fadeInUp 1s ease-out 0.8s both;
        }

        .manifesto-text {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }

        .manifesto-line {
            font-size: clamp(1.5rem, 6vw, 3rem);
            font-weight: 200;
            color: white;
            line-height: 0.9;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            opacity: 0.9;
        }

        .manifesto-line:nth-child(2) {
            margin-left: 2rem;
            color: #f67280;
            font-weight: 600;
        }

        .manifesto-line:nth-child(3) {
            margin-left: 4rem;
        }

        .manifesto-description {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.15em;
            writing-mode: vertical-rl;
            text-orientation: mixed;
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 2rem;
            margin: 4rem 0;
            position: relative;
            animation: fadeInUp 1s ease-out 1.2s both;
        }

        .feature-block {
            padding: 2rem;
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(246, 114, 128, 0.2);
            position: relative;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .feature-block::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(246, 114, 128, 0.1) 0%, transparent 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .feature-block:hover::before {
            opacity: 1;
        }

        .block-1 {
            transform: rotate(-1deg);
        }

        .block-2 {
            transform: translateY(-1rem);
        }

        .block-3 {
            transform: rotate(1deg) translateY(-0.5rem);
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 900;
            color: #f67280;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .feature-desc {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
        }

        .action-zone {
            display: flex;
            justify-content: center;
            padding: 4rem 0;
            animation: fadeInUp 1s ease-out 1.6s both;
        }

        .cta-wrapper {
            position: relative;
        }

        .cta-primary {
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem 3rem;
            background: linear-gradient(135deg, #f67280 0%, #355c7d 100%);
            color: white;
            text-decoration: none;
            font-weight: 900;
            font-size: 1.2rem;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            transform: skew(-5deg);
            transition: all 0.3s ease;
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }

        .cta-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .cta-primary:hover {
            transform: skew(-5deg) scale(1.05);
            box-shadow: 0 10px 30px rgba(246, 114, 128, 0.4);
            opacity: 1;
        }

        .cta-primary:hover::before {
            left: 100%;
        }

        .cta-text {
            transform: skew(5deg);
        }

        .cta-arrow {
            transform: skew(5deg);
            font-size: 1.5rem;
            transition: transform 0.3s ease;
        }

        .cta-primary:hover .cta-arrow {
            transform: skew(5deg) translateX(0.5rem);
        }

        @media (max-width: 768px) {
            .hero-section {
                flex-direction: column;
                text-align: center;
                gap: 3rem;
            }

            .manifesto {
                align-items: center;
            }

            .manifesto-text {
                align-items: center;
            }

            .manifesto-line:nth-child(2),
            .manifesto-line:nth-child(3) {
                margin-left: 0;
            }

            .manifesto-description {
                writing-mode: horizontal-tb;
                text-orientation: unset;
                text-align: center;
            }

            .content-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .feature-block {
                transform: none !important;
            }

            .context-floating {
                position: relative;
                top: unset;
                right: unset;
                transform: none;
                margin-bottom: 2rem;
            }
        }
    </style>
</Layout>
